{
  "name": "@tkrotoff/bootstrap-spinner",
  "version": "0.0.3",
  "repository": {
    "type": "git",
    "url": "https://github.com/tkrotoff/bootstrap-spinner.git"
  },
  "description": "Bootstrap 4 spinner for <input> and <button>",
  "license": "MIT",
  "keywords": [
    "bootstrap4",
    "bootstrap",
    "input",
    "button",
    "spinner"
  ],
  "main": "example/index.html",
  "files": [
    "src/"
  ],
  "sideEffects": false,
  "scripts": {
    "clean": "rm -rf dist .cache",
    "clean:all": "npm run clean && rm -rf node_modules package-lock.json",
    "start": "npm run clean && parcel example/index.html --open",
    "build": "npm run clean && parcel build example/index.html --public-url ./",
    "format": "prettier --write \"**/*\"",
    "precommit": "npm run format && npm run build",
    "prepush": "npm run precommit",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {},
  "peerDependencies": {
    "bootstrap": "^4.3.1"
  },
  "devDependencies": {
    "bootstrap": "^4.3.1",
    "husky": "^2.4.1",
    "node-sass": "^4.12.0",
    "parcel-bundler": "^1.12.3",
    "postcss-preset-env": "^6.6.0",
    "prettier": "^1.18.2"
  }
}
