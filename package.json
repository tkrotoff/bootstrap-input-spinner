{
  "name": "@tkrotoff/bootstrap-input-spinner",
  "version": "0.3.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/tkrotoff/bootstrap-input-spinner.git"
  },
  "description": "Bootstrap >= 4.2 spinner/loading/pending indicator for <input>",
  "license": "MIT",
  "keywords": [
    "bootstrap4",
    "bootstrap",
    "input",
    "loading",
    "spinner"
  ],
  "main": "example/index.html",
  "files": [
    "src/"
  ],
  "sideEffects": false,
  "scripts": {
    "clean": "rm -rf dist .cache",
    "clean:all": "npm run clean && rm -rf node_modules package-lock.json",
    "start": "npm run clean && parcel example/index.html --open",
    "build": "npm run clean && parcel build example/index.html --public-url ./",
    "format": "prettier --write \"**/*\"",
    "lint": "stylelint '**/*.scss'",
    "precommit": "npm run format && npm run lint && npm run build",
    "prepush": "npm run precommit",
    "prepublishOnly": "npm run build",
    "npm:update": "ncu --upgrade"
  },
  "dependencies": {},
  "peerDependencies": {
    "bootstrap": "^4.3.1"
  },
  "devDependencies": {
    "bootstrap": "^4.3.1",
    "husky": "^3.1.0",
    "npm-check-updates": "^4.0.1",
    "parcel-bundler": "^1.12.4",
    "postcss-preset-env": "^6.7.0",
    "prettier": "^1.19.1",
    "sass": "^1.24.2",
    "stylelint": "^12.0.1",
    "stylelint-config-airbnb": "^0.0.0",
    "stylelint-config-recommended-scss": "^4.1.0",
    "stylelint-order": "^4.0.0",
    "stylelint-scss": "^3.13.0"
  }
}
